<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white"
    tools:context="com.example.events.Activity.InvitationSuccessActivity">

<ImageView
    android:id="@+id/documents_logo"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="160dp"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/ic_docs"/>

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="There are no items here!"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/documents_logo"
    app:layout_constraintStart_toStartOf="@+id/documents_logo"
    app:layout_constraintTop_toBottomOf="@+id/documents_logo"
    app:layout_constraintVertical_bias="0.05"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="#575455" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your document"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.02"
        android:textSize="18sp"
        android:textColor="#818080" />

    <ImageView
        android:id="@+id/upload_imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.4"
        android:src="@drawable/ic_upload"/>



</androidx.constraintlayout.widget.ConstraintLayout>

