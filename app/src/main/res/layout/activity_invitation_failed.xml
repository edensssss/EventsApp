<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.example.events.Activity.InvitationFailedActivity">



    <ImageView
        android:id="@+id/error_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_fail"/>

    <TextView
        android:id="@+id/mainTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AN ERROR OCCURRED"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/error_logo"
        app:layout_constraintStart_toStartOf="@+id/error_logo"
        app:layout_constraintTop_toBottomOf="@+id/error_logo"
        app:layout_constraintVertical_bias="0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#575455" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We can't find text in your image"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainTitleTextView"
        app:layout_constraintStart_toStartOf="@+id/mainTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/mainTitleTextView"
        app:layout_constraintVertical_bias="0.02"
        android:textSize="18sp"
        android:textColor="#818080" />

    <ImageView
        android:id="@+id/try_again_imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainTitleTextView"
        app:layout_constraintStart_toStartOf="@+id/mainTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/mainTitleTextView"
        app:layout_constraintVertical_bias="0.4"
        android:src="@drawable/ic_try_again"/>



</androidx.constraintlayout.widget.ConstraintLayout>


