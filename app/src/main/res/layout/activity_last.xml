<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/white"
tools:context="com.example.events.Activity.LastActivity">



<ImageView
    android:id="@+id/documents_logo"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/ic_success"/>

<TextView
    android:id="@+id/titleTextView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="INVITATION SUCCESSFUL"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/documents_logo"
    app:layout_constraintStart_toStartOf="@+id/documents_logo"
    app:layout_constraintTop_toBottomOf="@+id/documents_logo"
    app:layout_constraintVertical_bias="0"
    android:textStyle="bold"
    android:textSize="22sp"
    android:textColor="#575455" />

<TextView
    android:id="@+id/titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  "
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/titleTextView1"
    app:layout_constraintStart_toStartOf="@+id/titleTextView1"
    app:layout_constraintTop_toBottomOf="@+id/titleTextView1"
    app:layout_constraintVertical_bias="0.02"
    android:textSize="18sp"
    android:textColor="#818080" />

<ImageView
    android:id="@+id/nice_imageView"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/titleTextView1"
    app:layout_constraintStart_toStartOf="@+id/titleTextView1"
    app:layout_constraintTop_toBottomOf="@+id/titleTextView1"
    app:layout_constraintVertical_bias="0.4"
    android:src="@drawable/ic_nice_button"/>



</androidx.constraintlayout.widget.ConstraintLayout>


